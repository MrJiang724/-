@section ExtraHead{
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css">            
}
@if (@User.Identity.IsAuthenticated)
{
    <h2>@ViewBag.Message</h2>
}
else
{
    <img style="width:100%;" src="@Url.Content("~/images/网页首页大图.png")" />
    
    <form action="@Url.Content("~/Account/LogOn")" method="post">    
        <div  id="login">
       
            <div  style=" position:relative; left:20%;top:20%; width:60%; height:50%;" >
              <p id="charact"> 管理员登录</p>

            <div class="editor-field">
                <input class="form-control" data-val="true" data-val-required="用户名是必需的。" id="UserName" placeholder="用户名" name="UserName" type="text" value=""/>
                <span class="field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
            </div>

            <div class="editor-field">
                <input class="form-control" data-val="true" data-val-required="密码是必需的。" id="Password" name="Password" placeholder="密码" type="password"/>
                <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
            <p>
                <input id="loginbtn" type="submit" value="登录">
                <input id="rebuild" type="reset" value="重置"> 
            </p>
            @if (ViewBag.error == "log fail")
            {
                <p id="error">用户名不存在或密码错误！</p>
            }
        </div>
    </div>
    
</form>

}

