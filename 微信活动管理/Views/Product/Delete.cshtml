@model 微信活动管理.Models.ProductModel

@{
    ViewBag.Title = "邮政金融超市 - 删除产品";
}

@if (!Request.IsAuthenticated)
{
    <p>使用本功能前请先登录！！<br/>请点击
    @Html.ActionLink("返回主页", "Index", "Home")
    进行用户登录
    </p>
}
else
{
    <p  class="navigation">@Html.ActionLink("产品管理", "Index", "Product") - 删除产品</p>
    <h2>确认删除</h2>
    <h3>你确定要删除这个产品吗？</h3>
<fieldset>

    <div class="display-label">产品名称:
        @Html.DisplayFor(model => model.product_name)
    </div>

    <div class="display-label">产品类型:
        @Html.DisplayFor(model => model.product_type)
    </div>

    <div class="display-label">创建时间:
        @Html.DisplayFor(model => model.create_time)
    </div>

    <div class="display-label">推送等级:
        @Html.DisplayFor(model => model.push_level)
    </div>
    @{
        var img_src = "http://218.94.40.114:25609/zhmdImageFiles/" + Html.DisplayFor(model => model.pic_url);
        <div class="display-label">产品图片:</div>
        <div class="display-field">
            <img src="@img_src" style="max-width:500px"/>
        </div>
    }
    <div class="display-label">产品描述:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.description)
    </div>

    <div class="display-label">产品链接:
        @Html.DisplayFor(model => model.content_url)
    </div>

</fieldset>
    using (Html.BeginForm())
    {
    <p>
        <input type="submit" value="确认删除" /> 
        @Html.ActionLink("返回产品管理", "Index")
    </p>
}

}