@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ExtraHead{
    <script src="http://echarts.baidu.com/build/dist/echarts.js"></script>
     <script src="@Url.Content("~/Scripts/MyChart.js")" type="text/javascript"></script>
     <style type="text/css">
        #leftBlock{
         margin:10px;
         width:15%;
         display:inline-block;
         vertical-align: top;
        }
        #rightBlock{
            margin:10px;
            width:75%;
            display:inline-block;
            vertical-align: top;
        }
    </style>
    @RenderSection("ExtraHead",false)
}

@if (!Request.IsAuthenticated)
{
    @RenderSection("Navigation", false)
    <p>使用本功能前请先登录！！<br/>请点击
    @Html.ActionLink("返回主页", "Index", "Home")
    进行用户登录
    </p>
}
else
{
    @RenderSection("Navigation", false)

    <div id="leftBlock">
    <div class="row-fluid"><div class="span12"><div  class="row-fluid menu-first"><div  style="display:block;" class="offset1 span2"><div   class="sidebar-menu">
        <span class="nav-header menu-first">数据分析</span> <hr/> 
        <ul class="nav nav-list menu-second in collapse" style="height: auto;">
            <li>@Html.ActionLink("广告机数据分析", "AdvertiseMachine")</li>
            <li>@Html.ActionLink("摄像头数据分析","CameraRecord")</li>
            <li>@Html.ActionLink("微信数据分析", "WeixinRecord")</li>
            <li>@Html.ActionLink("Wifi数据分析", "WifiRecord")</li>
            <li>@Html.ActionLink("产品数据分析", "ProductRecord", new { productID = 0 })</li>
            <li>@Html.ActionLink("客流统计", "CustomerRecord")</li>
        </ul>
    </div></div></div></div></div>
    </div>

    <div id="rightBlock">
        @RenderBody()
    </div>
    
}